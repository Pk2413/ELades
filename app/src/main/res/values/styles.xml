<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.MaterialComponents">

    </style>

    <style name="MyEditTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Ubah warna outline (garis tepi) -->
        <item name="boxStrokeColor">@color/colorOutline</item>
        <item name="boxBackgroundColor">@color/edittext</item>
<!--        <corners android:radius="30dp" />-->
        <!-- Ubah warna teks hint -->
        <item name="hintTextColor">@color/colorHintText</item>
    </style>


    <style name="login" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Ubah warna outline (garis tepi) -->
        <item name="boxStrokeColor">@color/outline</item>
        <item name="boxBackgroundColor">@color/edittext</item>
<!--                <corners android:radius="20dp" />-->
        <!-- Ubah warna teks hint -->
        <item name="hintTextColor">@color/outline</item>
    </style>
    <style name="MyTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <!-- Atur warna background -->
        <item name="android:background">@color/edittext</item>

        <!-- Atur warna outline (garis tepi) -->
<!--        <item name="colorControlNormal">#000000</item>-->
    </style>

    <style name="Surat" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>

        <item name="android:background">@color/edittext</item>
    </style>

    <style name="ESurat" parent="Widget.AppCompat.EditText">
        <item name="boxBackgroundColor">@color/edittext</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>



</resources>