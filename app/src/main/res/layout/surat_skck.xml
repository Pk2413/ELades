<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Surat.SKCK">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:onClick="kembali"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/kembali_panah"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SKCK"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:id="@+id/kode_surat"/>
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kode_surat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SURAT KETERANGAN ADAT ISTIADAT"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:id="@+id/keterangan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/keterangan"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
                <TextView
                    android:id="@+id/t_nik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginStart="5dp"
                    android:text="NIK" />

                <EditText
                    android:id="@+id/e_nik"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="NIK"
                    android:maxLines="1"
                    android:inputType="number"/>
</LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/t_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginStart="5dp"
                            android:text="NAMA" />

                        <EditText
                            android:id="@+id/e_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="NAMA"
                            android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/t_tempat_lahir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginStart="5dp"
                            android:text="TEMPAT TANGGAL LAHIR" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/e_tempat_lahir"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="TEMPAT LAHIR"
                            android:layout_weight="1"
                            android:maxLines="1"/>
                        <EditText
                            android:id="@+id/e_tanggal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="TANGGAL"
                            android:onClick="tanggal1"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/t_kebangsaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginStart="5dp"
                            android:text="KEBANGSAAN" />

                        <EditText
                            android:id="@+id/e_kebangsaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="KEBANGSAAN"
                            android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/t_agama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginStart="5dp"
                            android:text="AGAMA" />

                        <EditText
                            android:id="@+id/e_agama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="AGAMA"
                            android:maxLines="1"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/t_jenis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginStart="5dp"
                    android:text="JENIS KELAMIN" />

                <Spinner
                    android:layout_marginTop="5dp"
                    android:id="@+id/e_jenis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="JEMIS KELAMIN"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/t_kawin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginStart="5dp"
                            android:text="STATUS PERKAWINAN" />

                        <EditText
                            android:id="@+id/e_kawin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="STATUS PERKAWINAN"
                            android:maxLines="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/t_pekerjaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginStart="5dp"
                            android:text="PEKERJAAN"
                            android:maxLines="1"/>

                        <EditText
                            android:id="@+id/e_pekerjaan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="PEKERJAAN" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/t_tempat_tinggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginStart="5dp"
                            android:text="TEMPAT TINGGAL" />

                        <EditText
                            android:id="@+id/e_tempat_tinggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="TEMPAT TINGGAL"
                            android:maxLines="3"/>
                </LinearLayout>

                <Button
                    android:id="@+id/kirim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KIRIM"
                    android:background="@color/tombol"
                    android:layout_gravity="end"
                    android:layout_marginTop="40dp"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>