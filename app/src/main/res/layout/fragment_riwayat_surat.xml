        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backappbar">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Riwayat Surat"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="25dp"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/diajukan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/button_riwayat"
                android:text="Surat diajukan"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="20dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/selesai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/button_riwayat"
                android:text="Surat Selesai"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="20dp"/>
        </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/frame_riwayat"/>
</LinearLayout>